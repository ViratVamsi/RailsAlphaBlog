<h1> Create a new article </h1>
<% if @article.errors.any? %>
    <h2>The following errors prevented the article from submitting</h2>
        <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <%end%>
        </ul>

<%end%>

<%= form_with model: @article, local: true do |f| %>
    <div>
        <%= f.label :title %>
        <br>
        <%= f.text_field :title %>
        <br>
    </div>

     <div>
        <%= f.label :description %>
        <br>
        <%= f.text_area :description %>
        <br>
    </div>

    <%= f.submit "Submit" %>
<% end %>